<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slider_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:defaultValue="false"/>

    <RelativeLayout
        android:id="@+id/slider_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/check_box"
        android:persistent="true" />

    <TextView
        android:id="@+id/slider_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/slider_container"
        android:layout_alignBaseline="@id/check_box"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/slider_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/slider_container"
        android:layout_alignBaseline="@id/check_box"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/slider_metric" />

</RelativeLayout>